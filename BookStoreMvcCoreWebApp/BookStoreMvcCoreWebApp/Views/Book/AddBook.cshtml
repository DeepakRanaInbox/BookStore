@model Book_Model
@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="display-4">Add New Book</h3>

    <form method="post" asp-action="AddBook" asp-controller="Book">

        <div class="form-group">
            <label asp-for="title"></label>
            <input asp-for="title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="author"></label>
            <input asp-for="author" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="totalPages"></label>
            <input type="number" asp-for="totalPages" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="discription"></label>

            <textarea asp-for="discription" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </form>
</div>
