@model IEnumerable<BookStoreMvcCoreWebApp.Models.Book_Model>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="row">
        @foreach(BookStoreMvcCoreWebApp.Models.Book_Model BookItem in Model)
    {

        <div class="col-md-4">

            <div class="card mb-4 shadow-sm">
                <img src="@BookItem.imagePath" />
                <div class="card-body">
                    <h3>@BookItem.title</h3>
                    <p class="card-text">
                        @BookItem.discription

                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary">View Details</a>
                        </div>
                        <small class="text-muted">@BookItem.author</small>
                    </div>
                </div>
            </div>

        </div>
    }
    </div>
    </div>
